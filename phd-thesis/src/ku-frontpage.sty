%%% Construct the titlepage
\def\KUbold{\fontseries{bx}\selectfont}
\def\KUsemibold{\fontseries{sb}\selectfont}

\def\maketitle{
  \thispagestyle{empty}
  \AddToShipoutPicture*{\put( 0, 10){\includegraphics*{logos/ku-logo}}}
  \AddToShipoutPicture*{\put(15, -20){\includegraphics*{logos/\KUFACULTY-\KULANG}}}

  \ifthenelse{\equal{\KU@FRONTPAGEIMAGE}{}}{}{
    \AddToShipoutPicture*{
      \AtPageUpperLeft{\raisebox{-170mm}{\hspace{60pt}\includegraphics*[width=\textwidth, height=100mm, keepaspectratio]{\KU@FRONTPAGEIMAGE}}}
    }
  }

  \begin{textblock}{10}(1.3, 14.9)
    \noindent\fontsize{16pt}{18pt}\KUsemibold\KU@ASSIGNMENT
  \end{textblock}

  \begin{textblock}{10}(1.3, 15.9)
    \noindent\fontsize{28pt}{30pt}\KUsemibold\KU@TITLE
    \par\vspace{2mm}
    \noindent\fontsize{14pt}{16pt}\KUsemibold\KU@SUBTITLE
    \par\vspace{4mm}
    \noindent\fontsize{16pt}{18pt}\KUsemibold\KU@AUTHOR
  \end{textblock}

  \begin{textblock}{10}(1.3, 19.0)
    \begingroup
      \fontsize{11pt}{12pt}\KUsemibold
      \noindent\KU@ADVISOR
      \par\vspace{4mm}
      \noindent\KU@DATE
    \endgroup
  \end{textblock}

    \begin{textblock}{10}(1.3, 22.0)
    \fontsize{11pt}{12pt}
    \noindent\KU@SUBMISSIONSTATEMENT
  \end{textblock}

  \phantom{...}
  \newpage
  \noindent
}
